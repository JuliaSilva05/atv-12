#include <stdio.h>

int main(){
    int maior = 0;
    int linha = 0;
    int coluna = 0;
    int matriz[4][4] = {
        {6,20,32,4},
        {55,11,24,9},
        {3,30,26,90},
        {12,2,14,7}};
    for (int row = 0;row<4;row++){
        for (int column = 0;column<4;column++){
            if (matriz[row][column] > maior){
                maior = matriz[row][column];
                if (matriz[row][column]==maior){
                    coluna = column;
                    linha = row;
                }
            }
        }
    }
    printf("O maior valor est√° na linha %d e na coluna %d\n",linha,coluna);
    printf("e equivale a %d\n",maior);
    return 0;
}
